{
	"name": "reuseum/wordpress-quickstart",
	"description": "A fast and reliable WordPress quickstart application with essential features",
	"type": "project",
	"license": "GPL-2.0-or-later",
	"homepage": "https://github.com/rfair404/WordPress-QuickStart",
	"support": {
		"issues": "https://github.com/rfair404/WordPress-QuickStart/issues",
		"source": "https://github.com/rfair404/WordPress-QuickStart"
	},
	"authors": [
		{
			"name": "Your Name",
			"email": "your.email@example.com"
		}
	],
	"require": {
		"php": ">=8.1",
		"composer/installers": "^2.0",
		"johnpbloch/wordpress-core": "^6.6",
		"johnpbloch/wordpress-core-installer": "^2.0"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"automattic/vipwpcs": "^3.0",
		"phpunit/phpunit": "^9.5",
		"yoast/phpunit-polyfills": "^1.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/php-compatibility": "^9.3",
		"phpcompatibility/phpcompatibility-paragonie": "^1.3",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpcsstandards/phpcsutils": "^1.0",
		"phpcsstandards/phpcsextra": "^1.2",
		"sirbrillig/phpcs-variable-analysis": "^2.11"
	},
	"scripts": {
		"lint": [
			"@lint:phpcs"
		],
		"lint:phpcs": "./vendor/bin/phpcs --standard=.config/linting/phpcs.xml custom/",
		"lint:fix": [
			"@lint:phpcbf"
		],
		"lint:phpcbf": "./vendor/bin/phpcbf --standard=.config/linting/phpcs.xml",
		"test": [
			"@test:unit",
			"@test:wp-installation"
		],
		"test:unit": "./vendor/bin/phpunit --configuration phpunit.xml",
		"test:coverage": "./vendor/bin/phpunit --configuration phpunit.xml --coverage-html coverage --coverage-clover coverage/clover.xml",
		"test:coverage-text": "./vendor/bin/phpunit --configuration phpunit.xml --coverage-text",
		"test:wordpress": [
			"@test:wp-installation"
		],
		"test:wp-installation": "bash tests/validation/validate-wordpress-installation.sh",
		"test:wp-full": "bash tests/runners/run-wordpress-tests.sh",
		"analyze": [
			"@lint:phpcs"
		],
		"analyze:full": [
			"@lint:phpcs",
			"@security:check"
		],
		"security:check": [
			"composer audit"
		],
		"dev:setup": [
			"composer install",
			"@setup:standards",
			"@setup:hooks",
			"@gh:check"
		],
		"setup:hooks": [
			"bash scripts/setup/git-hooks.sh"
		],
		"setup:standards": [
			"phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/automattic/vipwpcs,vendor/phpcompatibility/php-compatibility,vendor/phpcompatibility/phpcompatibility-paragonie,vendor/phpcompatibility/phpcompatibility-wp,vendor/phpcsstandards/phpcsutils,vendor/phpcsstandards/phpcsextra,vendor/sirbrillig/phpcs-variable-analysis",
			"phpcs --config-set default_standard WordPress-VIP-Go"
		],
		"format": [
			"@lint:phpcbf"
		],
		"clean": [
			"rm -rf coverage/",
			"rm -rf vendor/",
			"rm -f composer.lock"
		],
		"check": [
			"composer validate --strict",
			"@lint:phpcs"
		],
		"check:wordpress": [
			"composer validate --strict",
			"@lint:phpcs"
		],
		"post-install-cmd": [
			"@setup:standards"
		],
		"post-update-cmd": [
			"@setup:standards"
		],
		"gh:check": "bash scripts/gh-wrapper.sh --version || echo 'GitHub CLI not installed. Install from: https://cli.github.com/'",
		"gh:actions": "bash scripts/gh-wrapper.sh run list --limit 10",
		"gh:actions:latest": "bash scripts/gh-wrapper.sh run view $(bash scripts/gh-wrapper.sh run list --json databaseId --jq '.[0].databaseId')",
		"gh:actions:logs": "bash scripts/gh-wrapper.sh run view $(bash scripts/gh-wrapper.sh run list --json databaseId --jq '.[0].databaseId') --log-failed",
		"gh:auth": "bash scripts/gh-wrapper.sh auth status || bash scripts/gh-wrapper.sh auth login",
		"wp:install": [
			"@composer install",
			"@wp:config"
		],
		"wp:install:full": [
			"@composer install",
			"@wp:config",
			"bash scripts/wp-install.sh"
		],
		"wp:config": [
			"php scripts/wp-config-generator.php"
		],
		"wp:update": [
			"@composer update johnpbloch/wordpress-core"
		],
		"wp:plugin:install": [
			"@composer require"
		],
		"wp:plugin:remove": [
			"@composer remove"
		],
		"wp:theme:install": [
			"@composer require"
		],
		"wp:version": [
			"@composer show johnpbloch/wordpress-core"
		],
		"wc:update": [
			"@composer update wpackagist-plugin/woocommerce"
		],
		"wc:version": [
			"@composer show wpackagist-plugin/woocommerce"
		],
		"wc:install:full": [
			"@composer install",
			"@wp:config",
			"bash scripts/wp-install.sh",
			"@wc:activate"
		],
		"wc:activate": [
			"bash scripts/wp-manager.sh plugin:activate woocommerce"
		],
		"wc:setup": [
			"@wc:activate",
			"bash scripts/wp-manager.sh wc:setup"
		]
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"extra": {
		"installer-paths": {
			"custom/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"custom/themes/{$name}/": [
				"type:wordpress-theme"
			],
			"custom/mu-plugins/{$name}/": [
				"type:wordpress-muplugin"
			]
		},
		"wordpress-install-dir": "wp"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"johnpbloch/wordpress-core-installer": true
		},
		"optimize-autoloader": true,
		"sort-packages": true,
		"process-timeout": 600
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}