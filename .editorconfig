# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# PHP files
[*.php]
indent_style = tab
indent_size = 4

# HTML files
[*.{html,htm}]
indent_size = 2

# CSS, SCSS, SASS files
[*.{css,scss,sass,less}]
indent_size = 2

# JavaScript, TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.{json,jsonc}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# XML files
[*.{xml,svg}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Batch files
[*.{bat,cmd}]
indent_style = tab
end_of_line = crlf

# .lando.yml specific
[.lando.yml]
indent_size = 2

# Configuration files
[*.{conf,cfg,ini}]
indent_size = 2

# Package files
[{package.json,composer.json}]
indent_size = 2
